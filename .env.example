# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_NAME=technical-test

# App Configuration
NODE_ENV=development
PORT=3000

# TypeORM
TYPEORM_CONNECTION=postgres
TYPEORM_ENTITIES=src/**/*.entity.ts
TYPEORM_MIGRATIONS=src/shared/database/migrations/*.ts
TYPEORM_MIGRATIONS_RUN=true

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-service-key
AZURE_SEARCH_INDEX_NAME=your-index-name

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_NAME=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Azure OpenAI (if using Azure instead of direct OpenAI)
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Document AI Configuration
DOCUMENT_EMBEDDING_MODEL=text-embedding-ada-002
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_CHUNK_OVERLAP=200
AZURE_SEARCH_INDEX_NAME=document-chunks

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_VERSION=2023-05-15
OPENAI_API_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
OPENAI_API_EMBEDDING_MODEL=text-embedding-ada-002

# Document Processing
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_CHUNK_OVERLAP=200
